{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],

  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "root": true,

  "ignorePatterns": [
    "src/__generated__/*",
    "next.config.js",
    "tailwind.config.js"
  ],

  "rules": {
    "no-unused-vars": ["off"],
    "@typescript-eslint/no-unused-vars": [
      "error",
      { "argsIgnorePattern": "^_" }
    ],
    "react/display-name": ["off"]
  }
}
